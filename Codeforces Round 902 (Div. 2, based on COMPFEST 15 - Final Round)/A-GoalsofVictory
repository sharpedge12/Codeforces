import java.util.*;
import java.io.PrintWriter;
 
 
public class main {
 
 
 
    public static void main(String[] args) {
 
        PrintWriter out = new PrintWriter(System.out);
        Scanner sc= new Scanner(System.in);
        int T = sc.nextInt();
        while(T-- > 0) {
            int n = sc.nextInt();
            long ans = 0 ;
            for(int i = 0  ; i < n-1 ; i++){
                ans += sc.nextInt();
            }
 
            ans = -ans;
 
            out.println(ans);
 
            out.flush();
        }
        out.close();
    }
}
 
